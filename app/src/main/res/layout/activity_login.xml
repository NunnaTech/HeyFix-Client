<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimenScreenPadding"
    android:gravity="center"
    android:layout_gravity="center_vertical"
    tools:context=".LoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimenTextTile"
        android:text="@string/tituloSesion"
        android:textColor="@color/md_theme_light_primary"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimenScreenPadding"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textGoogle"
        android:layout_marginBottom="@dimen/dimenScreenPadding"
        android:backgroundTint="@color/md_theme_light_surface"
        android:textColor="@color/SoftlyGray"
        app:icon="@drawable/ic_google"
        android:textStyle="bold"
        style="@style/Widget.Material3.Button.OutlinedButton"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="40dp">

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/SoftlyGray"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="o"
            android:textStyle="bold"
            android:textColor="@color/SoftlyGray"
            />
        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/SoftlyGray"/>
    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Correo Electrónico"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:helperText="Ej: usuario@gmail.com"
        app:startIconDrawable="@drawable/ic_account"
        app:startIconTint="@color/md_theme_light_primary"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="50" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Contraseña"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:helperText="********"
        app:startIconDrawable="@drawable/ic_eye"
        app:startIconTint="@color/md_theme_light_primary">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="20" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textSesionBtn"/>


</LinearLayout>